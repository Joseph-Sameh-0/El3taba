<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.profile.EditProfileFragment">

    <!-- Edit Seller Name -->
    <TextView
        android:id="@+id/textViewSellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextSellerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Seller Name"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/textViewSellerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <!-- Edit Seller Rating -->
    <TextView
        android:id="@+id/textViewSellerRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Rating"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextSellerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RatingBar
        android:id="@+id/ratingBarSellerRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="0.0"
        app:layout_constraintTop_toBottomOf="@id/textViewSellerRating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Edit Seller Bio -->
    <TextView
        android:id="@+id/textViewSellerBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Bio"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ratingBarSellerRating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextSellerBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Seller Bio"
        android:inputType="textMultiLine"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/textViewSellerBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:minHeight="100dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/editTextSellerBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
